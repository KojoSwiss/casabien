<div class="card-category" style="background-image: url('<%= cl_image_path @property.photo.key, height: 400, crop: :fill %>')">

</div>

<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="row">
        <div class="col-6">
          <p class="mb-6"><%= @property.address%></p>
          <p class="h2"><%= @property.price > 0 ? number_to_currency(@property.price, precision: 0) : "For Sale" %></p>
        </div>
        <div class="col-6 text-center">
          <div class="row mr-3 bg-light p-3">
            <div class="col-4">
              <p class="a-6"><strong>Rooms</strong></p>
              <%= @property.rooms %>
            </div>
            <div class="col-4">
              <p class="a-6"><strong>bathrooms</strong></p>
              <%= @property.bathrooms %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4">
      <h2 class="h3">David Webb</h2>
      <p>Test Company</p>
      <button class="btn btn-outline-success">Call</button>
      <button class="btn btn-outline-primary">Email</button>
    </div>
    <div class="row border-top border-bottom mt-4 mb-4 pt-4 pb-4">
      <div class="col-6">
        <strong class="text-success">Est. Monthly repayment of <%= number_to_currency((@property.price/ 360), precision: 0)%></strong>
      </div>
      <div class="col-6 text-right">
        <strong class="text-success"><%= link_to "Can I afford this property?", "#", class:"text-sucess" %>   </strong>
      </div>
    </div>
    <div class="row">
      <p class="h1">Property Description</p>
    </div>
    <div class="row">
      <div class="col">
        <p>
          <strong>Name:</strong>
          <%= @property.name %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= @property.price %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= @property.address %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= @property.price %>
        </p>

        <p>
          <strong>Rooms:</strong>
          <%= @property.rooms %>
        </p>

        <p>
          <strong>Bathrooms:</strong>
          <%= @property.bathrooms %>
        </p>
      </div>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_property_path(@property) %> |

